  { q: "Ты верный друзьям?", a: ["Очень", "Средне", "Не очень"] },
  { q: "Ты самостоятельный в действиях?", a: ["Да", "Иногда", "Нет"] }
];

// Простейшая система подсчета очков по типам собак
const dogTypes = [
  { name: "Лабрадор", score: 0 },
  { name: "Бультерьер", score: 0 },
  { name: "Чихуахуа", score: 0 },
  { name: "Бордер-колли", score: 0 },
  { name: "Хаски", score: 0 }
];

let currentQuestion = 0;

function showQuestion() {
  if (currentQuestion >= questions.length) {
    showResult();
    return;
  }
  const quizDiv = document.getElementById("quiz");
  quizDiv.innerHTML = `
    <div class="question"><strong>Вопрос ${currentQuestion + 1}:</strong> ${questions[currentQuestion].q}</div>
    <div class="answers">
      ${questions[currentQuestion].a.map((ans, i) => `<button onclick="answer(${i})">${ans}</button>`).join('')}
    </div>
  `;
}

function answer(choice) {
  // Простейшее распределение очков по типам собак
  switch(choice) {
    case 0: dogTypes[0].score += 2; dogTypes[3].score +=1; break;
    case 1: dogTypes[4].score +=2; dogTypes[1].score +=1; break;
    case 2: dogTypes[2].score +=2; break;
  }
  currentQuestion++;
  showQuestion();
}

function showResult() {
  const resultDiv = document.getElementById("result");
  dogTypes.sort((a,b) => b.score - a.score);
  resultDiv.innerHTML = `Ты похож на породу: <strong>${dogTypes[0].name}</strong>!`;
}

showQuestion();
</script>

